extends ../base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="oldPassword",placeholder="현재 비밀번호",type="password",required)
        input(name="newPassword",placeholder="새로운 비밀번호",type="password",required)
        input(name="newPasswordConfirmation",placeholder="비밀번호 확인",type="password",required)
        input(type="submit",value="변경")
