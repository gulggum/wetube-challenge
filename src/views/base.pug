include ./mixins/message

doctype html
html(lang="ko")
    head
        title #{pagetitle} | Wetube
        link(link rel="stylesheet" href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet", href="/static/css/styles.css")
        link(rel="icon" href="data:;base64,iVBORw0KGgo=")
    body
        if messages.error
            +message("error",messages.error)
        if messages.info
            +message("info",messages.info)
        if messages.success
            +success("success",messages.success)
        header 
            h1 #{pageTitle}
            nav 
                ul 
                    li
                      a(href="/") 🏠Home
                    if loggedIn
                        li
                          a(href="/users/logout") 로그아웃
                        li
                          a(href="/users/myPage") Mypage
                    else
                        li
                          a(href="/join") 회원가입
                        li
                          a(href="/login") 로그인
        
                    li
                      a(href="/videos/search") 🪄검색
                    li
                      a(href="/videos/upload") Upload video
                    li
                      a(href="/memo") 📒게시판


        main
            block content
            include ./partials/footer
            block scripts