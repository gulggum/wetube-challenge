extends base

block content
    if errorMessage
        span=errorMessage
    h2 Upload your video
    form(method="POST")
        input(name="title",placeholder="New video title", type="text",required)
        input(name="description",placeholder="Description", type="text",required)
        input(name="hashtags",placeholder="Hashtags", type="text",required) 
        input(type="submit",value="Upload")